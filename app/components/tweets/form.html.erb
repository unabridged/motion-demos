<%= form_with model: tweet, local: true, url: "#", data: { motion: 'input->validate submit->save' } do |f| %>
  <div class="form-group">
    <%= f.label :content, "Tweet" %>
    <div>
      <%= f.text_area :content, autofocus: true %>
      <div class="<%= valid_class(%i(content), f.object, :content) %>"><%= tweet.content&.length.to_i %> / 280</div>
      <%= validation_messages f.object, :content %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Submit", class: "btn btn-primary #{"disabled" if disabled?}", disabled: disabled? %>
      <% if disabled? %>
        <span class="ml-2">Fix errors to submit.</span>
      <% end %>
    </div>
  </div>
<% end %>
