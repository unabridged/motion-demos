<div class="go">
  <div class="captures">
    <div>
      <% @captures["black"].times do %>
      <span class="black"></span>
      <% end %>
    </div>
    <div>
      <% @captures["white"].times do %>
      <span class="white"></span>
      <% end %>
    </div>
  </div>

  <div class="board <%= @current %>">
    <% @board.each_with_index do |v,i| %>
    <%= button_tag "", class: v.to_s, data: { motion: "place", index: i.to_s } %>
    <% end %>
  </div>

  <%= button_tag "reset", data: { motion: "reset" } %>
</div>
